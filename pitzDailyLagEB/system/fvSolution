FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver          GAMG;
        tolerance       1e-06;
        relTol          0.1;
        smoother        GaussSeidel;
        minIter         1;
    }

    "(U|k|epsilon|ebf|phit)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-05;
        relTol          0.1;
    }
}

SIMPLE
{
    nNonOrthogonalCorrectors 0;
    consistent      yes;

    residualControl
    {
        p               1e-5;
        U               1e-6;
        "(k|epsilon)"   1e-6;
        "(phit|ebf)"    1e-5;
    }
}

relaxationFactors
{   
    fields
    {
        p               0.7;
    }
    equations
    {
        U               0.8; 
        k               0.7;
        epsilon         0.7;
        phit            0.7;
        ebf             0.9; 
    }
}


